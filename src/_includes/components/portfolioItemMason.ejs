<div class="portfolio-item relative overflow-hidden cursor-pointer">
    <img src="<%= item.data.cover %>" alt="Portfolio item cover photo" class="w-full transform transition duration-500">

    <div class="img-overlay absolute top-0 left-0 bottom-0 right-0 text-center filter opacity-0 hover:opacity-100 transition-all duration-500">
        <div class="relative top-1/2 transform -translate-y-1/2">

            <% if (item.data.standalone) { %>
                <a href="<%= item.url %>"><i class="fa fa-link fa-lg transition text-white font-bold bg-red hover:bg-red-dark rounded-full p-4"></i></a>
            <% } else { %>
                <a href="<%= item.data.link %>"><i class="fa fa-link fa-lg transition text-white font-bold bg-red hover:bg-red-dark rounded-full p-4"></i></a>
            <% } %>

            <h3 class="text-white font-bold text-base mt-2"><%= item.data.name %></h3>

        </div>
    </div>
</div>
<svg class="defs-only">
        <filter id="tint" color-interpolation-filters="sRGB"
                x="0" y="0" height="100%" width="100%">
          <feColorMatrix type="matrix"
            values="1 0 0 0  0.04 
                    0.30 0 0 0  0.07  
                    0.35 0 0 0  0.15 
                      0  0 0 1  0" />
        </filter>
</svg>

<style>
        .shaded 
        {  
                -webkit-filter: url(#tint);
                filter:  url(#tint)
        }

        .defs-only 
        {
                position: absolute;
                height: 0; width: 0;
                overflow: none;
                left: -100%;
        }

</style>
<div class="flip-card relative">
    <div class="flip-card-inner rounded shadow-xl transition-all duration-1000">

        <div class="flip-card-front bg-white">

            <img src="<%= item.data.cover %>" alt="Portfolio item cover photo" class="object-cover" style="aspect-ratio: 3/2;">
            <div class="px-4 py-2">
                <h3 class="font-bold text-xl mb-2"><%= item.data.name %></h3>
            </div>

        </div>
        <div class="flip-card-back bg-white">
            <div class="relative md:p-8 p-4 md:pt-12 pt-6 h-full">
                <%  if (item.data.standalone) { %>
                    <a href="<%= item.data.link %>" class="font-bold md:text-2xl text-xl mb-2 whitespace-nowrap overflow-hidden overflow-ellipsis"><%= item.data.name %></a>
                <% } else { %>
                    <a href="<%= item.url %>" class="font-bold md:text-2xl text-xl mb-2 whitespace-nowrap overflow-hidden overflow-ellipsis"><%= item.data.name %></a>
                <% } %>
                <h1 class="font-bold md:text-2xl text-xl mb-2 whitespace-nowrap overflow-hidden overflow-ellipsis"><%= item.data.name %></h1>
                <div class="bg-red w-24 h-0.5 rounded mb-3"></div>
                <h3 class="text-lg mb-4 text-gray overflow-hidden overflow-ellipsis" style="display: -webkit-box; -webkit-line-clamp: 4; line-clamp: 4; -webkit-box-orient: vertical;"><%= item.data.summary %></h3>
            </div>
        </div>

    </div>
</div>
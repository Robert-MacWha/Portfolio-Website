<div class="flip-card relative">
    <div class="flip-card-inner rounded shadow-xl transition-all duration-1000">

        <div class="flip-card-front bg-white">

            <img src="<%= item.data.cover %>" alt="Portfolio item cover photo" class="object-cover w-full " style="aspect-ratio: 4/3;">
            <div class="px-4 py-2">
                <h3 class="font-bold text-xl mb-2"><%= item.data.name %></h3>
            </div>

        </div>
        <div class="flip-card-back bg-white">
            <div class="relative md:p-8 p-4 h-full overflow-hidden overflow-ellipsis">
                <h3 class="text-md mb-4 text-gray overflow-hidden overflow-ellipsis" style="display: -webkit-box; -webkit-line-clamp: 6; line-clamp: 6; -webkit-box-orient: vertical;"><%= item.data.summary %></h3>
                <a href="<%= item.data.link %>" class="absolute md:bottom-6 bottom-4 left-1/2 transform -translate-x-1/2 group"><i class="fa fa-link fa-2x text-white bg-red p-2 rounded transition duration-700 group-hover:bg-red-dark"></i></a>
            </div>
        </div>

    </div>
</div>